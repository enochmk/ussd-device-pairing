{
	"name": "ussd-device-pairing",
	"version": "1.1.1",
	"description": "Dynamic USSD for AirtelTigo Device Pairing",
	"main": "server.js",
	"scripts": {
		"dev": "nodemon src/server.ts",
		"cleanup": "rimraf build",
		"build": "npm run cleanup && tsc --pretty",
		"start": "npm run build && node build/server.js",
		"format": "npm run lint && npm run prettier",
		"lint": "npm run lint:check && npm run lint:fix",
		"lint-staged": "lint-staged",
		"lint:check": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts",
		"prepare": "husky install",
		"prettier": "npm run prettier:check && npm run prettier:fix",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"pretty-quick": "pretty-quick --staged",
		"release": "standard-version",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watchAll"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/enochmk/ussd-device-pairing.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/enochmk/ussd-device-pairing/issues"
	},
	"lint-staged": {
		"*.ts": "eslint --fix"
	},
	"homepage": "https://github.com/enochmk/ussd-device-pairing#readme",
	"dependencies": {
		"axios": "^0.26.1",
		"config": "^3.3.7",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-xml-bodyparser": "^0.3.0",
		"moment": "^2.29.1",
		"morgan": "^1.10.0",
		"mssql": "^6.4.1",
		"redis": "^4.0.4",
		"standard-version": "^9.3.2",
		"uuid": "^8.3.2",
		"winston": "^3.6.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@commitlint/config-conventional": "^16.2.1",
		"@types/config": "^0.0.41",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-xml-bodyparser": "^0.3.2",
		"@types/moment": "^2.13.0",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.23",
		"@types/redis": "^4.0.11",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.12.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.4",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"standard-version": "^9.3.2",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.5.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.6.3"
	}
}
